{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": ["node", "jest"],
    "lib": ["es2018"],
    "declaration": false,
    "noEmit": false
  },
  "include": ["src/**/*", "src/global.d.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}