{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": [ "node", "jest" ],
    "lib": [ "es2018" ],
    "declaration": false,
    "noEmit": false
  },
  "typeRoots": [ "./src", "./node_modules/@types" ],
  "include": [ "src/**/*", "src/index.d.ts", "test", "src/**/*.ts"],  
  "exclude": [ "node_modules", "**/*.test.ts" ]
}